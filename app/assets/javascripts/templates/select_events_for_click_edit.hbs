<div class="modal-dialog events-form-modal">
  <div class="modal-content">
    <header class="modal-header clearfix">
      <button class="close" data-dismiss='modal'>&times;</button>
      
      <button {{bind-attr class=":toggle-form-btn :btn showQuickEventForm:btn-link:btn-primary"}} {{action 'toggleForm'}}>
        {{#if showQuickEventForm}}
          <i class="fa fa-angle-up"></i>
        {{else}}
          <i class="fa fa-plus"></i>
          <i class="fa fa-angle-down"></i>
        {{/if}}
      </button>
      <button class="btn btn-link start-again" {{action 'startTour'}}>
        <i class="fa fa-lightbulb-o"></i>
      </button>

      <div class="header-title">{{t 'lineup.events.title'}}</div>

      <form {{bind-attr class=":new-event-form showQuickEventForm::hide :animated showQuickEventForm:fadeIn"}}>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-map-marker"></i>
              {{t 'lineup.venue.title'}}
            </div>
            {{view 'selectize'
              value=curEvent.venue_id
              content=availableVenues
              allowCreate=false
              optionLabelPath='content.title'
              optionValuePath='content.id'
              class="select-venue"
              }}
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-clock-o"></i>
              {{t 'time'}}
            </div>
            {{input value=curEvent.startsTime class='timepicker'}}
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="fa fa-calendar-o"></i>
              {{t 'date'}}
            </div>
            {{input value=curEvent.startsDate class='datepicker'}}
          </div>
        </div>

        <div class="form-group align-right">
          <button class="btn btn-primary">
            {{t 'lineup.event.add'}}
          </button>
        </div>

      </form>

    </header>
    <section class="modal-body">
      <ul class="select-options">
      </ul>
    </section>
  </div>
</div>