<header class="caminio-modal-ctrl row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4 align-center">
    <div class="breadcrumbs">
      {{#link-to 'lineup_venues.index'}}
        <i class="fa fa-map-marker"></i>
        {{t 'lineup.venues.title'}}
      {{/link-to}}
      <i class="fa fa-angle-right"></i>
      {{t 'lineup.venue.edit'}}
    </div>
  </div>
  <div class="col-md-4 align-right">
    <a href="#" class="btn btn-close" {{action 'goTo' 'lineup_venues.index'}}>
      &times;
    </a>
  </div>
</header>

<div class="caminio-modal-overlay">

  <div class="caminio-modal-wrap">

    <section class="card">

      {{partial 'lineup_venues/form'}}

    </section>

    <aside class="card">

      <h2>comments</h2>

    </aside>

  </div>

  <div class="save-ctrl align-right card">
    {{#link-to 'lineup_venues.index' class="btn btn-default"}}{{t 'cancel'}}{{/link-to}}
    <button class="btn btn-primary" {{action 'save' true}}>{{t 'save'}}</button>
  </div>

</div>